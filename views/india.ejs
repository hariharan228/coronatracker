<%- include('partials/header')-%>
<div class="container" >
    <center><h3>All India District Stats</h3></center>
</div>
<br>
<br>

    <div class="table-responsive">
        <table class="sortable" style="  width: 300px;
        margin: 20px auto;
        background: #fafafa;
        box-sizing: border-box;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);">
        <thead style="  border: 1px solid #222;
        border-right: 0;
        background: #333;">
                <th class="card-text text-primary" style="  color: #fff;
                padding: 10px;
                border-right: 1px solid #222;">District</th>
                <th class="card-text text-danger" style="  color: #fff;
                padding: 10px;
                border-right: 1px solid #222;">Active </th>
                <th class="card-text text-info" style="  color: #fff;
                padding: 10px;
                border-right: 1px solid #222;">Confirmed</th>
                <th class="card-text text-warning" style="  color: #fff;
                padding: 10px;
                border-right: 1px solid #222;">Deaths</th>
                <th class="card-text text-success"style="  color: #fff;
                padding: 10px;
                border-right: 1px solid #222;">Recovered</th>
            </thead>
            <tbody style="  border-left: 1px solid #ccc;
            ">
                <% indData["districts"].forEach((dist)=> { %>
                    
            <tr>
                <td style="
                padding: 10px;
                border-right: 1px solid #ccc;"> <%= dist["district"] %></td>
                <td style="
                padding: 10px;
                border-right: 1px solid #ccc;"> <%= dist["active"] %></td>
                <td style="
                padding: 10px;
                border-right: 1px solid #ccc;"> <%= dist["confirmed"] %></td>
                <td style="
                padding: 10px;
                border-right: 1px solid #ccc;"> <%= dist["deceased"] %></td>
                <td style="
                padding: 10px;
                border-right: 1px solid #ccc;"> <%= dist["recovered"] %></td>
             </tr>
             
    <% }) %>
    
    
    
          </tbody> 
        </table>
        <br><br>
    <hr class="container md-5 w-75" style="border: 10px solid #ccdefe;border-radius: 5px;">
    <br><br>
